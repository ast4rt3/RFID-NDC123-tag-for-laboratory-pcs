{
  "name": "rfid-ndc123-tag-for-laboratory-pc",
  "version": "1.0.0",
  "description": "RFID NDC123 Tag for Laboratory PC - Client Application",
  "main": "client/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/server.js",
    "start-client": "electron client/main.js",
    "build": "electron-builder",
    "build-installer": "electron-builder --win"
  },
  "keywords": ["rfid", "laboratory", "pc", "monitoring"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "active-win": "^8.2.1",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mysql2": "^3.14.2",
    "pidusage": "^4.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.rfid.ndc123.client",
    "productName": "RFID NDC123 Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "client/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RFID NDC123 Client"
    },
    "asarUnpack": [
      "client/pc-logger.js",
      "client/config.js",
      "client/*.node",
      "node_modules/pidusage/**",
      "node_modules/active-win/**",
      "node_modules/@mapbox/**",
      "node_modules/node-addon-api/**",
      "node_modules/bindings/**",
      "node_modules/prebuild-install/**",
      "node_modules/nan/**",
      "node_modules/which/**"
    ]
  }
}

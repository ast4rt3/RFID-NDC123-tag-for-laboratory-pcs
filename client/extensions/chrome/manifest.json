{
  "manifest_version": 3,
  "name": "RFID Laboratory Monitor",
  "version": "1.0.0",
  "description": "Monitors search activity for laboratory PC tracking",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.bing.com/*",
    "https://search.yahoo.com/*",
    "https://duckduckgo.com/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.bing.com/*",
        "https://search.yahoo.com/*",
        "https://duckduckgo.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RFID Laboratory Monitor"
  }
}

